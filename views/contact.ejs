<%-include('./partials/header.ejs') %>
    <div class="container-fluid bg-dark">
        <div class="row">
            <div class="col-sm-2">
                <%- include('./partials/sidebar.ejs', {page_name : 'contact'}) %>

            </div>
            <div class="col-sm-10">
                <!-- main cotent -->
                <!-- <h1> contact page -->
                <form>
                    <!-- Name input -->
                    <div class="form-outline mb-3">
                        <label class="form-label" for="form4Example1">Name</label>

                        <input type="text" id="form4Example1" class="form-control" />
                    </div>

                    <!-- Email input -->
                    <div class="form-outline mb-3">
                        <label class="form-label" for="form4Example2">Email address</label>

                        <input type="email" id="form4Example2" class="form-control" />
                    </div>

                    <!-- Message input -->
                    <div class="form-outline mb-3">
                        <label class="form-label" for="form4Example3">Message</label>

                        <textarea class="form-control"="form4Example3" rows="4"></textarea>
                    </div>

                    <!-- Checkbox -->
                    <div class="form-check d-flex justify-content-center mb-3">
                        <label class="form-check-label" for="form4Example4" style="color: chartreuse;">

                        <input class="form-check-input me-2" type="checkbox" value="" id="form4Example4" checked />
                            Send me a copy of this message
                          </label>
                    </div>

                    <!-- Submit button -->
                    <button type="submit" style="background-color: chartreuse; font-weight: bold;" class="btn btn-primary btn-block mb-3">Send</button>
                </form>
            </div>
        </div>
    </div>


    <%- include('./partials/footer.ejs') %>